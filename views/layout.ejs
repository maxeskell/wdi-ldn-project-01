<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Express oAuth</title>
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <% if(locals.isAuthenticated) { %>
          <li><a href="/profile">Profile</a></li>
          <li><a href="/logout">Logout</a></li>
        <% } else { %>
          <li><a href="/register">Register</a></li>
          <li><a href="/login">Login</a></li>
        <% } %>
      </ul>
    </nav>
    <% for(const type in messages) { %>
      <div class="<%= type %>">
        <h5><%= messages[type] %></h5>
      </div>
    <% } %>
    <main>
      <%- body %>
    </main>
  </body>
</html>