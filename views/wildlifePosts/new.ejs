<h1>New</h1>

<%# enctype="multipart/form-data%>

<div class="row">
  <form class="six columns" method="POST" enctype="multipart/form-data" action="/wildlifePosts">
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" type="text" name="title" id="title">
    </div>

    <div class="form-group">
      <label for="createdBy">Created by</label>
      <input class="form-control" type="text" name="createdBy" id="createdBy">
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      <input class="form-control-file" type="file" name="image" id="image">
      <small id="fileHelp" class="form-text text-muted">Upload an image from your computer here (only png or jpg)</small>

    </div>

    <div class="form-group">
      <label for="mainContent">What is in the image?</label>
      <textarea class="form-control" name="mainContent"></textarea>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" name="description"></textarea>
    </div>

    <div class="form-group">
      <label for="lat">Lattiutude</label>
      <textarea class="form-control" name="lat"></textarea>
    </div>

    <div class="form-group">
      <label for="lon">Longditude</label>
      <textarea class="form-control" name="lon"></textarea>
    </div>

    <button class="btn btn-primary">Create</button>
  </form>
</div>
